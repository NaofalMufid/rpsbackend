<%- include('../../partials/header') -%>
<%- include('../../partials/sidebar') -%>
<!-- content -->
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
        <h1 class="h2">Edit User</h1>
        <div class="col-md-6">
            <form method="POST" action="/userbiodata/<%= data.id%>/update">
                <label for="user_id">User ID</label>
                <br>
                <input type="text" name="user_id" class="form-control" value="<%= data.user_id %>"/>
                <br>

                <label for="name">Name</label>
                <br>
                <input type="text" name="name" class="form-control" value="<%= data.firstname %>"/>
                <br>
                
                <label for="gender">Gender</label>
                <br>
                <select name="gender" id="" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <br>
                
                <label for="address">Address</label>
                <br>
                <textarea name="address" id="" cols="30" rows="10" class="form-control"><%= data.address %></textarea>
                <br>

                <label for="avatar">Avatar</label>
                <br>
                <img src="<%= data.avatar %>" alt="My Avatar" width="50px">
                <input type="text" name="avatar" id="" class="form-control" placeholder="Ex:https://www.arsenal.com/sites/default/files/styles/desktop_16x9/public/images/main_0.jpg ">
                <br>
                
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </main>
<%- include('../../partials/footer') -%>
    