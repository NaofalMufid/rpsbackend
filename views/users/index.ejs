<%- include('../partials/header') -%>
<%- include('../partials/sidebar') -%>
<!-- content -->
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">User Game</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">User Game Biodata</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">User Game History</a>
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <!-- User Game -->
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <h1 class="h2">Data User</h1>
                <a href="/new/user" class="btn btn-primary btn-smal mb-2"><span data-feather="plus-square"></span> Add User</a>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                        <th>#</th>
                        <th>Username</th>
                        <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(i => { %>
                        <tr>
                            <td><%= i.id %></td>
                            <td><%= i.username %></td>
                            <td class="form-inline">
                                <a href="user/<%= i.id %>" class="btn btn-warning btn-sm mr-2">
                                    <span data-feather="edit"></span>
                                </a>
        
                                <form action="/user/<%= i.id %>/delete" method="POST">
                                    <button class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this record?')">
                                        <span data-feather="trash"></span>
                                    </button>
                                    <input type="hidden" name="_method" value="DELETE">
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                    </table>
                </div>
            </div>
            <!-- User Game Biodata  -->
