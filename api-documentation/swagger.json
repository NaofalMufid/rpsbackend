{
    "swagger": "2.0",
    "info": {
      "description": "This is a API Documentation RPS Game Backend ",
      "version": "1.0.0",
      "title": "RPS Game API",
      "termsOfService": "http://rpsgame.io/terms/",
      "contact": {
        "email": "api-team@rpsgame.io"
      },
      "license": {
        "name": "Apache 2.0",
        "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
      }
    },
    "host": "localhost:4000",
    "basePath": "/api/v1/",
    "tags": [
      {
        "name": "Players",
        "description": "Player auth register & login",
        "externalDocs": {
          "description": "Find out more",
          "url": "http://rpsgame.io/api_docs"
        }
      },
      {
        "name": "Assets",
        "description": "Game Asset Resource",
        "externalDocs": {
          "description": "Find out more",
          "url": "http://rpsgame.io/api_docs"
        }
      }
    ],
    "schemes": [
      "http"
    ],
    "securityDefinitions": {
      "Bearer": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    },
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "paths": {
      "/register": {
        "post": {
          "tags": [
            "Players"
          ],
          "description": "Register new player",
          "parameters": [
            {
              "name": "player",
              "in": "body",
              "description": "Player that we want to register",
              "required": true,
              "schema": {
                "$ref": "#/definitions/Register"
              }
            }
          ],
          "produces": ["application/json"],
          "responses": {
            "201": {
              "description": "Registration success"
            },
            "400": {
              "description": "Bad Request"
            }
          }
        }
      },
      "/login": {
        "post": {
          "tags": [
            "Players"
          ],
          "description": "Login Player",
          "parameters": [
            {
              "name": "player",
              "in": "body",
              "description": "Player that we want to login",
              "required": true,
              "schema": {
                "$ref": "#/definitions/Login"
              }
            }
          ],
          "responses": {
            "201": {
              "description": "Player login success"
            },
            "401": {
              "description": "Unauthorized"
            }
          }
        }
      },
      "/whoami":{
        "get": {
          "tags": [
            "Players"
          ],
          "summary": "Get personal info player",
          "description": "",
          "produces": ["application/json"],
          "parameters": [],
          "responses": {
            "200": {
              "description": "Authorization OK",
              "schema": {
                "$ref": "#/definitions/Palyers"
              }
            },
            "401":{
              "description": "You do not have necessary permissions for the resource"
            } 
          },
          "security": [
            {
              "Bearer": []
            }
          ]
        }
      },
      "/assets": {
        "get": {
          "tags": [
            "Assets"
          ],
          "summary": "Get All Assets",
          "description": "Showing sample assets game",
          "produces": ["application/json"],
          "parameters": [],
          "responses": {
            "200": {
              "description": "Authorization OK, you can  access sample assets game",
              "schema": {
                "$ref": "#/definitions/Assets"
              }
            },
            "403":{
              "description": "You do not have necessary permissions for the resource"
            } 
          },
          "security": [
            {
              "Bearer": []
            }
          ]
        }
      },
      "/assets/{id}": {
        "get": {
          "tags": [
            "Assets"
          ],
          "summary": "Find asset by Id",
          "description": "",
          "produces": ["application/json"],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "description": "ID of asset to return",
              "required": true,
              "type": "integer"
            }
          ],
          "responses": {
            "200": {
              "description": "Authorization OK, you can  access sample assets game",
              "schema": {
                "$ref": "#/definitions/Asset"
              }
            },
            "400": {
              "description": "Invalid ID supplied"
            },
            "404": {
              "description": "Asset not found"
            }
          },
          "security": [
            {
              "Bearer": []
            }
          ]
        }
      }
    },
    "definitions": {
      "Player":{
        "required":[
          "username",
          "email",
          "roles",
          "password"
        ],
        "properties":{
          "username":{
            "type": "string"
          },
          "email":{
            "type": "string"
          },
          "roles":{
            "type": "string"
          },
          "password":{
            "type": "string"
          }
        }
      },
      "Register":{
        "required":[
          "username",
          "email",
          "password"
        ],
        "properties":{
          "username":{
            "type": "string"
          },
          "email":{
            "type": "string"
          },
          "password":{
            "type": "string"
          }
        }
      },
      "Login":{
        "required":[
          "username",
          "password"
        ],
        "properties":{
          "username":{
            "type": "string"
          },
          "password":{
            "type": "string"
          }
        }
      },
      "Asset":{
        "required":[
          "name",
          "images"
        ],
        "properties":{
          "id":{
            "type": "integer"
          },
          "name":{
            "type": "string"
          },
          "images":{
            "type": "string"
          }
        }
      }
    }
  }